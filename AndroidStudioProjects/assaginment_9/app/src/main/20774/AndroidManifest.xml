<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="pk.edu.riu.e4031.sqlitedatabase" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AllBookActivity"
            android:label="@string/title_activity_all_book"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="pk.edu.riu.e4031.sqlitedatabase.MainActivity" />
        </activity>
        <activity
            android:name=".BookActivity"
            android:label="@string/title_activity_book"
            android:parentActivityName=".AllBookActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="pk.edu.riu.e4031.sqlitedatabase.AllBookActivity" />
        </activity>
    </application>

</manifest>
